<?xml version="1.0" encoding="utf-8"?>
<!-- Full-screen radial glow behind the arc reactor -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <gradient
        android:type="radial"
        android:gradientRadius="180dp"
        android:centerX="0.5"
        android:centerY="0.5"
        android:startColor="#2200E5FF"
        android:centerColor="#0D00E5FF"
        android:endColor="#00000000" />
    <size android:width="360dp" android:height="360dp" />
</shape>
