<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0F"
    tools:context=".ui.main.MainActivity">

    <!-- Top Bar — Jarvis AI branding -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JARVIS AI"
                android:textColor="#00E5FF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:letterSpacing="0.15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="modby piash"
                android:textColor="#7A8899"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:layout_marginTop="1dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_preferences"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            app:tint="#00E5FF" />
    </LinearLayout>

    <!-- Status Card — glassmorphism style -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#1A1A2E"
        app:cardCornerRadius="16dp"
        app:strokeWidth="1dp"
        app:strokeColor="#1E3A5F"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Inactive"
                android:textColor="#FF5252"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/tvProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Provider: Not configured"
                android:textColor="#7A8899"
                android:textSize="11sp"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/tvAccessibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Notifications: OFF"
                android:textColor="#FF5252"
                android:textSize="11sp"
                android:fontFamily="monospace" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Conversation Log -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/statusCard"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvConversation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E0E8F0"
            android:textSize="13sp"
            android:fontFamily="monospace"
            android:lineSpacingMultiplier="1.3"
            android:text="" />
    </ScrollView>

    <!-- Bottom Bar: Big Activate Button + Text Input -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#12121A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Text input row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etInput"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:hint="Type koren (optional)..."
                android:textColor="#E0E8F0"
                android:textColorHint="#4A5568"
                android:background="#1E1E2E"
                android:paddingHorizontal="14dp"
                android:textSize="13sp"
                android:singleLine="true"
                android:imeOptions="actionSend" />

            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/ic_menu_send"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Send"
                app:tint="#00E5FF" />
        </LinearLayout>

        <!-- THE BIG BUTTON — Jarvis style -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActivate"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="ACTIVATE JARVIS"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            app:backgroundTint="#00E5FF"
            app:cornerRadius="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
